@model AnimeANdGameMusic.Models.GameDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h1>Gamers Hub</h1>
<h2>Are you sure you want to delete this game?</h2>

<table id="GameDetailsTable">
    <tr>
        <th id="trID">Game ID</th>
        <th id="trName">Name</th>
        <th id="trReleaseYear">Release Year</th>
        <th id="trDescription">Description</th>
        <th id="trGenre">Genre</th>
        <th id="trPrice">Price</th>
    </tr>
    <tr>
        <td id="tdID">@Model.GameID</td>
        <td id="tdName">@Model.GameName</td>
        <td id="tdReleaseYear">@Model.ReleaseYear</td>
        <td id="tdDescription">@Model.Description</td>
        <td id="tdGenre">@Model.GenreName</td>
        <td id="tdPrice">@Model.Price</td>
    </tr>
</table>

<div id="btnContainer">
    <div>
        <a href="/game/List" id="backbtn">Cancel</a>
    </div>
    <div>
        <form action="/Game/Delete/@Model.GameID" method="POST">
            <input type="submit" value="Confirm Delete" id="delBtn" />
        </form>
    </div>
</div>
